{
    "$schema": "https://json.schemastore.org/tsconfig",
    "private": false,
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es2022", "DOM"],
      "module": "commonjs",
      "target": "es2022",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "outDir": "./dist",
      "declaration": true
    },
  
    "include": ["src/**/*.ts", "test/**/*.ts"]
  }
